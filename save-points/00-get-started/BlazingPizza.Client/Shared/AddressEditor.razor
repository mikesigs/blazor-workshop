<div class="form-field">
    <label for="name">Name:</label>
    <div>
        <InputText @bind-Value="Address.Name" autocomplete="given-name" placeholder="Name" />
        <ValidationMessage For="@(() => Address.Name)" />
    </div>
</div>
<div class="form-field">
    <label for="address-line1">Line 1:</label>
    <div>
        <InputText @bind-Value="Address.Line1" autocomplete="address-line1" placeholder="Address Line 1" />
        <ValidationMessage For="@(() => Address.Line1)" />
    </div>
</div>
<div class="form-field">
    <label for="address-line2">Line 2:</label>
    <div>
        <InputText @bind-Value="Address.Line2" autocomplete="address-line2" placeholder="Address Line 2" />
        <ValidationMessage For="@(() => Address.Line2)" />
    </div>
</div>
<div class="form-field">
    <label for="city">City:</label>
    <div>
        <InputText @bind-Value=Address.City autocomplete="city" type="text" placeholder="City"/>
        <ValidationMessage For="@(() => Address.City)" />
    </div>
</div>
<div class="form-field">
    <label>Region:</label>
    <div>
        <InputText @bind-Value="Address.Region" autocomplete="region state province" placeholder="Region" />
        <ValidationMessage For="@(() => Address.Region)" />
    </div>
</div>
<div class="form-field">
    <label>Postal code:</label>
    <div>
        <InputText @bind-Value="Address.PostalCode" autocomplete="postal-code" placeholder="Postal Code" />
        <ValidationMessage For="@(() => Address.PostalCode)" />
    </div>
</div>

@code {
    [Parameter] public Address Address { get; set; }
}